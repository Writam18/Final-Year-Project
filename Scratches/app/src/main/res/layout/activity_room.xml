<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#52566A"
    tools:context=".activity_room">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/back_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/ic_back_icon" />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="Rooms"
            android:textAllCaps="true"
            android:textColor="@color/cardview_light_background"
            android:textSize="30sp"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_for_tv"
                android:onClick="room1"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/bedroom_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/bungee"
                    android:onClick="room1"
                    android:padding="1dp"
                    android:text="BEDROOM"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="20sp" />


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_for_tv1"
                android:onClick="room2"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/hall_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="27dp"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/bungee"
                    android:gravity=""
                    android:onClick="room2"
                    android:text="HALL"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="20sp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_for_tv"
                android:onClick="room3">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_alignParentRight="true"

                    android:src="@drawable/studyroom_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/bungee"
                    android:onClick="room3"

                    android:text="STUDY ROOM"
                    android:textColor="@color/design_default_color_on_secondary"

                    android:textSize="20sp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_for_tv1"
                android:onClick="room4">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignParentLeft="true"

                    android:src="@drawable/kitchen_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/bungee"

                    android:onClick="room4"
                    android:text="KITCHEN"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="20sp" />

            </RelativeLayout>

        </RelativeLayout>



    </LinearLayout>

</ScrollView>








